<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.flizi.cloud.upms.biz.mapper.RoleMapper">

    <resultMap id="SysRole" type="cn.flizi.cloud.upms.api.entity.UpmsRole">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="role" jdbcType="VARCHAR" property="role"/>
        <result column="scope" jdbcType="VARCHAR" property="scope" typeHandler="com.baomidou.mybatisplus.extension.handlers.JacksonTypeHandler"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
        <collection column="{roleId=id}" property="authorities" select="selectAuthoritiesByRole">
        </collection>
    </resultMap>

    <select id="selectAuthoritiesByRole" resultType="java.lang.Integer">
        select authority_id
        from upms_role_authority
        where role_id = #{roleId};
    </select>

    <select id="getPage" resultType="cn.flizi.cloud.upms.api.entity.UpmsRole" resultMap="SysRole">
        select *
        from upms_role
    </select>
</mapper>
